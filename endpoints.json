{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["sort_by","order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article with the specified id",
    "exampleResponse": {
      "article":
      {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for an article with the specified id",
    "exampleResponse": {
      "comments":
      [{
        "comment_id": 14,
        "article_id": 2,
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "body": "This is a comment"
      }]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment to an article with the specified id",
    "exampleResponse": {
      "comment":
      {
        "comment_id": 14,
        "article_id": 2,
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "body": "This is a comment"
      }
    },
    "exampleBody": {
      "username": "weegembump",
      "body": "This is a comment"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes on an article with the specified id",
    "exampleResponse": {
      "article":
      {
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 10,
        "comment_count": 6
      }
    },
    "exampleBody": {
      "votes": 10
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Deletes the comment with the specified id",
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "exampleResponse": {
      "topics": [{
        "username": "butter_bridge",
        "name": "jonny",
        "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
      }]
    }
  }
}
